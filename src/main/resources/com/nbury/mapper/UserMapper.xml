        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nbury.mapper.UserMapper">
    <insert id="insertUser">
 insert into t_user (name,password) values ("liuhuacheng","207715");
 </insert>

    <select id="getUser" resultType="User" parameterType="integer">
        select * from t_user where id = #{id}
    </select>

    <select id="getUserByUserNameAndPassword" resultType="User">
        select * from t_user where name = #{name} and password = #{password}
    </select>

    <select id="getUserLikeByUsername" resultType="User">
        <!--select * from t_user where name like '%${name}%'-->
        select * from t_user where name like "%"#{name}"%"
    </select>
    <delete id="batchDeleteUser">
        delete  from t_user where id in (${ids})
    </delete>

    <insert id="insertUserAutoId" useGeneratedKeys="true" keyProperty="id">
        insert into t_user values (null,#{name},#{password})
    </insert>
</mapper>